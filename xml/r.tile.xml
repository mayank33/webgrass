<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE task SYSTEM "grass-interface.dtd">
<task name="r.tile">
	<description>
		Splits a raster map into tiles.
	</description>
	<keywords>
		raster, tiling
	</keywords>
	<parameter name="input" type="string" required="yes" multiple="no">
		<description>
			Name of input raster map
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="cell" prompt="raster" />
	</parameter>
	<parameter name="output" type="string" required="yes" multiple="no">
		<description>
			Output base name
		</description>
	</parameter>
	<parameter name="width" type="integer" required="yes" multiple="no">
		<description>
			Width of tiles (columns)
		</description>
	</parameter>
	<parameter name="height" type="integer" required="yes" multiple="no">
		<description>
			Height of tiles (rows)
		</description>
	</parameter>
	<parameter name="overlap" type="integer" required="no" multiple="no">
		<description>
			Overlap of tiles
		</description>
	</parameter>
	<flag name="help">
		<description>
			Print usage summary
		</description>
	</flag>
	<flag name="verbose">
		<description>
			Verbose module output
		</description>
	</flag>
	<flag name="quiet">
		<description>
			Quiet module output
		</description>
	</flag>
</task>
