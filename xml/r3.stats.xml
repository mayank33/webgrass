<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE task SYSTEM "grass-interface.dtd">
<task name="r3.stats">
	<description>
		Generates volume statistics for 3D raster maps.
	</description>
	<keywords>
		raster3d, statistics, voxel
	</keywords>
	<parameter name="input" type="string" required="yes" multiple="no">
		<description>
			Name of input 3D raster map
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="grid3" prompt="raster_3d" />
	</parameter>
	<parameter name="nsteps" type="integer" required="no" multiple="no">
		<description>
			Number of subranges to collect stats from
		</description>
		<default>
			20
		</default>
	</parameter>
	<flag name="e">
		<description>
			Calculate statistics based on equal value groups
		</description>
	</flag>
	<flag name="c">
		<description>
			Only print cell counts
		</description>
	</flag>
	<flag name="help">
		<description>
			Print usage summary
		</description>
	</flag>
	<flag name="verbose">
		<description>
			Verbose module output
		</description>
	</flag>
	<flag name="quiet">
		<description>
			Quiet module output
		</description>
	</flag>
</task>
