<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE task SYSTEM "grass-interface.dtd">
<task name="v.net.components">
	<description>
		Computes strongly and weakly connected components in the network.
	</description>
	<keywords>
		vector, network, components
	</keywords>
	<parameter name="input" type="string" required="yes" multiple="no">
		<label>
			Name of input vector map
		</label>
		<description>
			Or data source for direct OGR access
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="vector" prompt="vector" />
	</parameter>
	<parameter name="arc_layer" type="string" required="no" multiple="no">
		<label>
			Arc layer
		</label>
		<description>
			Vector features can have category values in different layers. This number determines which layer to use. When used with direct OGR access this is the layer name.
		</description>
		<gisprompt age="old" element="layer" prompt="layer" />
		<default>
			1
		</default>
		<guisection>
			Cost
		</guisection>
	</parameter>
	<parameter name="node_layer" type="string" required="no" multiple="no">
		<label>
			Node layer
		</label>
		<description>
			Vector features can have category values in different layers. This number determines which layer to use. When used with direct OGR access this is the layer name.
		</description>
		<gisprompt age="old" element="layer" prompt="layer" />
		<default>
			2
		</default>
		<guisection>
			Cost
		</guisection>
	</parameter>
	<parameter name="arc_column" type="string" required="no" multiple="no">
		<description>
			Arc forward/both direction(s) cost column (number)
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="dbcolumn" prompt="dbcolumn" />
		<guisection>
			Cost
		</guisection>
	</parameter>
	<parameter name="arc_backward_column" type="string" required="no" multiple="no">
		<description>
			Arc backward direction cost column (number)
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="dbcolumn" prompt="dbcolumn" />
		<guisection>
			Cost
		</guisection>
	</parameter>
	<parameter name="node_column" type="string" required="no" multiple="no">
		<description>
			Node cost column (number)
		</description>
		<guisection>
			Cost
		</guisection>
	</parameter>
	<parameter name="output" type="string" required="yes" multiple="no">
		<description>
			Name for output vector map
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="new" element="vector" prompt="vector" />
	</parameter>
	<parameter name="method" type="string" required="yes" multiple="no">
		<description>
			Type of components
		</description>
		<values>
			<value>
				<name>weak</name>
				<description>Weakly connected components</description>
			</value>
			<value>
				<name>strong</name>
				<description>Strongly connected components</description>
			</value>
		</values>
	</parameter>
	<flag name="a">
		<description>
			Add points on nodes
		</description>
	</flag>
	<flag name="overwrite">
		<description>
			Allow output files to overwrite existing files
		</description>
	</flag>
	<flag name="help">
		<description>
			Print usage summary
		</description>
	</flag>
	<flag name="verbose">
		<description>
			Verbose module output
		</description>
	</flag>
	<flag name="quiet">
		<description>
			Quiet module output
		</description>
	</flag>
</task>
