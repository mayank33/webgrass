<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE task SYSTEM "grass-interface.dtd">
<task name="db.describe">
	<description>
		Describes a table in detail.
	</description>
	<keywords>
		database, attribute table
	</keywords>
	<parameter name="table" type="string" required="yes" multiple="no">
		<description>
			Name of attribute table
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="dbtable" prompt="dbtable" />
	</parameter>
	<parameter name="driver" type="string" required="no" multiple="no">
		<description>
			Name of database driver
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="dbdriver" prompt="dbdriver" />
		<default>
			sqlite
		</default>
		<values>
			<value>
				<name>odbc</name>
			</value>
			<value>
				<name>pg</name>
			</value>
			<value>
				<name>sqlite</name>
			</value>
			<value>
				<name>mysql</name>
			</value>
			<value>
				<name>dbf</name>
			</value>
			<value>
				<name>ogr</name>
			</value>
		</values>
	</parameter>
	<parameter name="database" type="string" required="no" multiple="no">
		<description>
			Name of database
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="dbname" prompt="dbname" />
		<default>
			$GISDBASE/$LOCATION_NAME/$MAPSET/sqlite/sqlite.db
		</default>
	</parameter>
	<flag name="c">
		<description>
			Print column names only instead of full column descriptions
		</description>
	</flag>
	<flag name="t">
		<description>
			Print table structure
		</description>
	</flag>
	<flag name="help">
		<description>
			Print usage summary
		</description>
	</flag>
	<flag name="verbose">
		<description>
			Verbose module output
		</description>
	</flag>
	<flag name="quiet">
		<description>
			Quiet module output
		</description>
	</flag>
</task>
