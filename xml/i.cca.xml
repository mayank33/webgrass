<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE task SYSTEM "grass-interface.dtd">
<task name="i.cca">
	<description>
		Canonical components analysis (CCA) program for image processing.
	</description>
	<keywords>
		imagery, statistics, CCA, canonical components analysis
	</keywords>
	<parameter name="group" type="string" required="yes" multiple="no">
		<description>
			Name of input imagery group
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="group" prompt="group" />
	</parameter>
	<parameter name="subgroup" type="string" required="yes" multiple="no">
		<description>
			Name of input imagery subgroup
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="old" element="group" prompt="group" />
	</parameter>
	<parameter name="signature" type="string" required="yes" multiple="no">
		<description>
			File containing spectral signatures
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
	</parameter>
	<parameter name="output" type="string" required="yes" multiple="no">
		<description>
			Output raster map prefix name
		</description>
		<keydesc>
			<item order="1">name</item>
		</keydesc>
		<gisprompt age="new" element="cell" prompt="raster" />
	</parameter>
	<flag name="overwrite">
		<description>
			Allow output files to overwrite existing files
		</description>
	</flag>
	<flag name="help">
		<description>
			Print usage summary
		</description>
	</flag>
	<flag name="verbose">
		<description>
			Verbose module output
		</description>
	</flag>
	<flag name="quiet">
		<description>
			Quiet module output
		</description>
	</flag>
</task>
